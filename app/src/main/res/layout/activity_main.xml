<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.test.test.test.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:alpha="0.3"
        android:background="@drawable/meal"
        android:layout_marginTop="10dp"
        android:layout_height="200dp" />
    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="200dp">


    <ImageView
        android:id="@+id/countdownIcon2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="30dp"
        android:visibility="gone"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/asl_pathmorph_digits"
       />


    <ImageView
        android:id="@+id/countdownIcon1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="30dp"
        android:visibility="gone"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/asl_pathmorph_digits"/>
        <ImageView
            android:id="@+id/countdownIcon"
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/asl_pathmorph_digits"/>
    </LinearLayout>

    <RelativeLayout
       android:layout_below="@+id/lay"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#009688"
            android:text="+"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:alpha="0"
            />
        <Button
            android:id="@+id/minus"
            android:layout_width="30dp"
            android:layout_centerInParent="true"
            android:layout_height="30dp"
            android:background="#009688"
            android:textColor="@android:color/white"
            android:text="-"
            android:textSize="20sp"
            android:alpha="0"
            />


        <Button
            android:id="@+id/add"
            android:layout_width="60dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:background="#009688"
            android:text="ADD +"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>
</RelativeLayout>
